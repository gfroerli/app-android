<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_bottom_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MapActivity">

    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/map_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        mapbox:attribution_margin_bottom="3dp"
        mapbox:attribution_margin_left="3dp"
        mapbox:center_latitude="47.209587"
        mapbox:center_longitude="8.823612"
        mapbox:logo_enabled="false"
        mapbox:my_location_enabled="false"
        mapbox:style_url="@string/mapbox_style"
        mapbox:tilt="0"
        mapbox:zoom="12" />

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/details_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:behavior_hideable="true"
        app:layout_behavior="@string/bottom_sheet_behavior">

        <!-- Layout containing both the bottom sheet and the drop shadow -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Drop shadow -->
            <View
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="@drawable/drop_shadow" />

            <!-- Peek area -->
            <include layout="@layout/bottom_sheet_peek" />

            <!-- Divider -->
            <include layout="@layout/divider" />

            <!-- Details -->
            <include layout="@layout/bottom_sheet_details" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>